{% extends 'AdminBundle:layout:index.html.twig' %}

{% block main %}

{#<form action="" method="POST" >#}
{{ form_start(form) }}
    <div class="col-xs-12 extended form-title">
        <div class="col-xs-8">
          
            <h3>Add new article</h3>
          
        </div>
        <div class="col-xs-4">
          <div class="text-right mt5">
            <button class="btn custom">Save</button>
            <button class="btn custom">Close</button>
          </div>
          
        </div>
    </div>
    
    <div class="ui-form-content">
        
        <div class="form-group ui-form-row col-xs-12">
            <div class="col-xs-3">
                <label for="">Title</label>    
            </div>
            <div class="col-xs-9">
                {{ form_widget(form.title , { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        
        <!-- SLUG FIELD -->
        <div class="form-group ui-form-row col-xs-12">
            <div class="col-xs-3">
                <label for="">Url slug (URI PATH)</label>    
            </div>
            <div class="col-xs-9">
                {{ form_widget(form.slug , { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        
        <div class="form-group ui-form-row col-xs-12">
            <div class="col-xs-12">
                <label for="">Article content</label>    
            </div>
            <div class="col-xs-12">
                {{ form_widget(form.content , { 'attr': {'class': 'form-control', 'rows' : 5} }) }}
            </div>
        </div>
        
        <!-- CREATED / UPDATES FIELDs -->
        <div class="form-group ui-form-row col-xs-12">
            <div class="col-xs-6 extended">
                <div class="col-xs-6">
                    <label for="">Created At</label>        
                </div>
                <div class="col-xs-6">
                    <p class="input-group">
                        <input type="text" class="form-control" name="" required="" disabled placeholder="" value="{{ "now"|date("Y-m-d H:i:s") }}" />    
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default is-date" disabled><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </p>
                </div>
                
            </div>
            <div class="col-xs-6 extended">
                <div class="col-xs-6">
                    <label for="">Updated At</label>        
                </div>
                <div class="col-xs-6">
                    <p class="input-group">
                        <input type="text" class="form-control" name="" required="" disabled placeholder="" value="{{ "now"|date("Y-m-d H:i:s") }}" />    
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default is-date" disabled><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </p>
                </div>
            </div>
        </div>
        
        <!-- STATUS FIELD -->
        <div class="form-group ui-form-row col-xs-12">
            STATUS FIELD
        </div>
        
    </div>
{{ form_end(form) }}

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/dashboard.js') }}"></script>
    <script type="text/javascript">
        $(function(){
             console.log('on article ready.')   
        });
    </script>
{% endblock %}